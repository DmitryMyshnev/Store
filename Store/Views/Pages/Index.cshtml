@model IEnumerable<Store.Models.ViewModels.Pages.PageVM>

@{
    ViewBag.Title = "Products";
}

    <h2>Products</h2>

@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}

<a>
    @Html.ActionLink("Create New Page", "AddPage","",new { @class = "btn btn-success"})
</a>
@if (!Model.Any())
{
<h1 class="text-center">There are no product</h1>
}
else
{
<table class="table">
    <tr>
        <th>
           Title
        </th>
        <th>
            Slug
        </th>
       
        <th>
           Body
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Slug)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Body)
    </td>
    
   
    
    <td>
        @Html.ActionLink("Edit", "EditProduct", new { id = item.Id }) |
        @Html.ActionLink("Details", "ProductDetails", new { id = item.Id }) |
        @Html.ActionLink("Delete", "DeleteProduct", new { id = item.Id }, new { @class = "delete" })
    </td>
</tr>
}

</table>
}
@section Scripts
{
  <script>
      $(function () {
          // Confirm product delete
          $("a.delete").click(function () {
              if (!confirm("Confirm product deletion")) return false;
          });
      });
    </script>
}